        <EditText
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:paddingStart="@dimen/_30sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:background="@drawable/background_kotak_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tambah"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/btncari_pajak"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tambah"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/baseline_add_box_24"
            android:tint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/edit"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/btntambah_pajak"
            android:tint="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        app:layout_constraintTop_toBottomOf="@id/layout_toolbar"
        app:layout_constraintLeft_toLeftOf="parent" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keuangan Gaji"
            android:textColor="#000000"
            android:textSize="@dimen/_12ssp"
            android:layout_margin="@dimen/_6sdp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_36sdp"
            android:paddingStart="@dimen/_36sdp"
            android:text="Keuangan Gaji"
            android:textColor="#000000"
            android:textSize="@dimen/_24ssp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_120sdp"
            android:background="@drawable/saldo_pajak"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3">

                <!-- Header Row -->
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#CCCCCC"
                        android:padding="8dp"
                        android:text="No."
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#CCCCCC"
                        android:padding="8dp"
                        android:text="Karyawan"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#CCCCCC"
                        android:padding="8dp"
                        android:text="Posisi/Jabatan"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#CCCCCC"
                        android:padding="8dp"
                        android:text="Gaji"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#CCCCCC"
                        android:padding="8dp"
                        android:text="Tanggal"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

        </FrameLayout>

    </FrameLayout>

