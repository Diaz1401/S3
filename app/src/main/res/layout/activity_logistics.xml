<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".wba.activity.LogistikActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/topInfo"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:background="@drawable/fotoprofil"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logistics"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/colorGreyDark"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintStart_toEndOf="@id/imgProfile"
            app:layout_constraintEnd_toStartOf="@id/imgLogo"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/logo_wba"
            android:layout_gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
        android:id="@+id/mainInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_kotak_wba"
        android:layout_margin="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@id/topInfo">

        <TextView
            android:id="@+id/txtTot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:textStyle="bold"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_18sdp"/>

        <TextView
            android:id="@+id/txtTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERIODE"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/colorGreyLight"
            android:layout_marginTop="@dimen/_48sdp"
            android:layout_marginStart="@dimen/_18sdp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tambahdata"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:clickable="true"
            android:src="@drawable/baseline_add_box_24_grey"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_216sdp"/>

        <TextView
            android:id="@+id/txtTambahData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catat data baru"
            android:textSize="@dimen/_8ssp"
            android:textColor="@color/colorGreyLight"
            android:layout_marginTop="@dimen/_54sdp"
            android:layout_marginStart="@dimen/_204sdp" />
        <TextView
            android:id="@+id/txtPilihtanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih waktu:"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_72sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_18sdp" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerTanggal"
            android:layout_marginTop="@dimen/_72sdp"
            android:layout_marginStart="@dimen/_84sdp"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:layout_marginTop="@dimen/_36sdp"
        app:layout_constraintTop_toBottomOf="@id/mainInfo"
        app:layout_constraintLeft_toLeftOf="parent" >

        <com.dewakoding.androiddatatable.DataTableView
            android:id="@+id/dataTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>