<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/wba_light"
    android:layout_gravity="center_horizontal">

    <ScrollView
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_margin="@dimen/_18sdp"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_kotak_wba">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_18sdp">
                <FrameLayout
                    android:id="@+id/layoutProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_64sdp"
                        android:background="@drawable/background_bulat_white"
                        android:scaleType="centerCrop"
                        app:riv_oval="true"/>
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textSize="@dimen/_18ssp"
                        android:textStyle="bold"
                        android:textColor="@color/wba_light"
                        android:layout_marginStart="@dimen/_72sdp"
                        android:layout_marginTop="@dimen/_18sdp"/>
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorGreyLight"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_6sdp"/>

            <LinearLayout
                android:id="@+id/layoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_6sdp" >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/baseline_mail_outline_24_white"/>
                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMAIL"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/wba_light"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_12sdp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_18sdp">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/baseline_location_pin_24_white"/>
                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADDRESS"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/wba_light"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_12sdp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_18sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_kotak_white"
        app:layout_constraintTop_toBottomOf="@id/profil"
        android:id="@+id/grafik1">
        <com.github.mikephil.charting.charts.BarChart
            android:layout_gravity="center_horizontal"
            android:layout_width="340dp"
            android:layout_height="130dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_18sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background_kotak_white"
        app:layout_constraintTop_toBottomOf="@id/grafik1"
        android:id="@+id/grafik2">
        <com.github.mikephil.charting.charts.BarChart
            android:layout_gravity="center_horizontal"
            android:layout_width="340dp"
            android:layout_height="130dp"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>