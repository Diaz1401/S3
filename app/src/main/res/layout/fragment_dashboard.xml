<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/wba_light"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_kotak_wba"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginHorizontal="@dimen/_18sdp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/background_bulat_white"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:textColor="@color/wba_light"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_36sdp"/>

        <TextView
            android:id="@+id/txtId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorGreyLight"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_84sdp"/>

        <LinearLayout
            android:id="@+id/layoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_114sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:src="@drawable/baseline_mail_outline_24_white"/>
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/wba_light"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_12sdp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_132sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:src="@drawable/baseline_location_pin_24_white"/>
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/wba_light"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_12sdp" />
        </LinearLayout>
        <FrameLayout
            android:layout_height="@dimen/_84sdp"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_162sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:alpha="0.4"
            android:background="@drawable/background_kotak_white_no_border"/>
        <ImageButton
            android:id="@+id/btnAbsen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_180sdp"
            android:layout_marginEnd="@dimen/_36sdp"
            android:layout_gravity="end"
            android:src="@drawable/ic_absen"
            android:background="@null"/>
        <TextView
            android:layout_marginTop="@dimen/_180sdp"
            android:layout_marginStart="@dimen/_36sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:text="Kehadiran"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/persentaseKehadiran"
            android:layout_marginTop="@dimen/_198sdp"
            android:layout_marginStart="@dimen/_36sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="@dimen/_24ssp"
            android:textColor="@color/white"/>
    </FrameLayout>
