<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/siwiba_light"
    android:layout_gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/topInfo"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/colorGreyDark"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_18sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/logo_wba"
            android:layout_gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/topInfo"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginHorizontal="@dimen/_18sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_6sdp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/background_bulat_white"
            android:scaleType="centerCrop"
            app:riv_oval="true"/>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:textColor="@color/siwiba_light"
            android:layout_marginStart="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_36sdp"/>

        <LinearLayout
            android:id="@+id/layoutJabatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_84sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:src="@drawable/baseline_home_work_24"/>
            <TextView
                android:id="@+id/txtJabatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JABATAN"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/siwiba_light"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_12sdp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_102sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:src="@drawable/baseline_mail_outline_24_white"/>
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/siwiba_light"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_12sdp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_120sdp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="0dp"
                android:src="@drawable/baseline_location_pin_24_white"/>
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDRESS"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/siwiba_light"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_12sdp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtPilihPeriode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih waktu:"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginBottom="@dimen/_18sdp" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPeriode"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginStart="@dimen/_84sdp"/>

    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/profil"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisUtama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartUtama"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisUtama"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisUtama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartUtama"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisGaji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartGaji"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisGaji"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisGaji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartGaji"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisBpjs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartBpjs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisBpjs"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisBpjs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartBpjs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisKas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartKas"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisKas"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisKas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartKas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisLogistik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartLogistik"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisLogistik"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisLogistik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartLogistik"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisPajak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartPajak"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisPajak"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisPajak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartPajak"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisPinjaman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartPinjaman"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisPinjaman"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisPinjaman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartPinjaman"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginHorizontal="@dimen/_18sdp">
                <TextView
                    android:id="@+id/labelYAxisTagihan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Nominal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black" />
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartTagihan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:layout_constraintTop_toBottomOf="@id/labelYAxisTagihan"
                    android:layout_marginTop="@dimen/_6sdp" />
                <TextView
                    android:id="@+id/labelXAxisTagihan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tanggal"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/lineChartTagihan"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="@dimen/_6sdp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>